#!/bin/echo "This file is meant to be source, not executed!"

# determine location of this script
DIR=`dirname ${BASH_SOURCE}`
DIR=$(cd "${DIR}" && pwd)
export ACMAKE="${DIR}"
unset DIR

# set up some environment variables
echo -n "Setting up environment for acmake in ${ACMAKE}..."

export PATH="${ACMAKE}/bin/:${PATH}"
export CMAKE_MODULE_PATH="${ACMAKE}/modules"

echo "done."
